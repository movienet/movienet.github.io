* {
	box-sizing: border-box;
}

*[class^="pic-wrapper"] {
	overflow: hidden;
	margin: 16px 0;
}

*[class^="pic-wrapper"] img {
	float: left;
}

.pic-wrapper-1 img {
	width: 100%;
}

.pic-wrapper-2 img {
	width: 50%;
}

.pic-wrapper-3 img {
	width: 33.333333%;
}

.pic-wrapper-4 img {
	width: 25%;
}


