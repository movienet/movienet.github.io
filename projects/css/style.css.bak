.button-black,
.button-blue,
.button-red {
	display: inline-block;
	padding: 0 16px;
	height: 29px;
	margin: 5px 0;
	line-height: 29px;
	text-align: center;
	font-size: 14px;
	color: #fff;
	border-radius: 7px;
} 

.button-black {
	background: #404040;
}

.button-blue {
	background: #3856b4;
}

.button-red {
	background: #de4257;
}

